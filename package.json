{
  "name": "koa-startup-kit",
  "version": "1.0.0",
  "description": "Koa Startup Kit",
  "main": "src/index.js",
  "author": "Ignacio Rivas <rivasign@gmail.com>",
  "private": true,
  "scripts": {
    "test": "jest --forceExit",
    "start": "node -r dotenv/config src/",
    "dev": "nodemon -L -r dotenv/config src/ -e 'js hbs'",
    "lint": "eslint src",
    "prepush": "yarn lint",
    "migrate": "knex migrate:latest",
    "migrate:create": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "seed:create": "knex seed:make"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-polyfill": "^6.23.0",
    "chalk": "^2.0.1",
    "dotenv": "^4.0.0",
    "joi": "^11.1.1",
    "knex": "^0.13.0",
    "koa": "^2.2.0",
    "koa-better-flash": "^0.0.3",
    "koa-bodyparser": "^4.2.0",
    "koa-csrf": "3.x",
    "koa-generic-session": "^2.0.0",
    "koa-hbs": "^1.0.0",
    "koa-helmet": "^3.2.0",
    "koa-router": "next",
    "koa-sslify": "^2.1.2",
    "koa-static": "^4.0.1",
    "lodash": "^4.17.4",
    "massive": "^3.1.0",
    "moment": "^2.18.1",
    "pg": "^6.2.4",
    "sendgrid": "^5.2.0",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0"
  }
}
