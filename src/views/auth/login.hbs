<div class="page-header" style="background-image: url('/img/login-image.jpg');">
  <div class="filter"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-4 offset-lg-4 col-sm-6 offset-sm-3">
        <div class="card card-register">
          {{> flash}}
          <h3 class="title">Login</h3>
          <form class="register-form" method="POST">
            <input type="hidden" name="_csrf" value="{{ csrf }}" />
            <label>Email</label>
            <input autocomplete="off" name="email" type="email" class="form-control" placeholder="Email" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
            <label>Password</label>
            <input autocomplete="off" name="password" type="password" class="form-control" placeholder="Password" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">

            <button class="btn btn-danger btn-block btn-round">Login</button>
          </form>
          <div class="forgot">
            <a class="btn btn-link btn-danger" href="/forgot">Forgot password?</a>
            <a class="btn btn-link btn-danger" href="/signup">Need an account?</a>
          </div>
        </div>
      </div>
    </div>

    <div class="footer register-footer text-center">
      <h6>Â© 
      <script>
      document.write(new Date().getFullYear())
      </script>, made with <i class="fa fa-heart heart"></i> by {{ getAppName }}</h6>
    </div>
  </div>
</div>
